dec :: fn(cpu: CPU, step: Step) -> CPU {
    val := read(step.address, cpu.mem) - 1
    write(step.address, val, cpu.mem)
    return setZN(cpu, val)
}

dex :: fn(cpu: CPU, step: Step) -> CPU {
    cpu.x -= 1
    return setZN(cpu, cpu.x)
